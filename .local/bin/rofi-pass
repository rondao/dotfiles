#!/bin/bash

shopt -s nullglob globstar

# switch for autotyping
copyit=0
if [[ $1 == "--copy" ]]; then
    copyit=1
    shift
fi

# get all the saved password files
prefix=${PASSWORD_STORE_DIR-~/.password-store}
password_files=( "$prefix"/**/*.gpg )
password_files=( "${password_files[@]#"$prefix"/}" )
password_files=( "${password_files[@]%.gpg}" )

# shows a list of all password files and saved the selected one in a variable
password=$(printf '%s\n' "${password_files[@]}" | rofi -dmenu 2> /dev/null)
[[ -n $password ]] || exit

if [[ $copyit -eq 0 ]]; then
    wtype "$(pass show $password | head -n1)"
else
    pass -c "$password" 2> /dev/null
fi

