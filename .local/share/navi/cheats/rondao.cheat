% rondao

# Mount Windows PC
sudo mount -t cifs "//PC-MARCOS/Share" /home/rondao/windows/ -o uid=1000

# Unmount Windows PC
sudo umount /home/rondao/windows

# Fix NTFS with bad mount
sudo ntfsfix -d <device>

# SSH Raspberry Pi
ssh rondao@192.168.0.114

# SSH Chacara
ssh alarm@100.96.1.18

# Copy Chacara 1
rsync -chavzP --stats "alarm@100.96.1.18:/var/lib/motioneye/Camera1/2025-<month>-*" /run/media/rondao/HD_FILES/chacara/quartinho/

# Copy Chacara 2
rsync -chavzP --stats "alarm@100.96.1.18:/var/lib/motioneye/Camera2/2025-<month>-*" /run/media/rondao/HD_FILES/chacara/piscina/

